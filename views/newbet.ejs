<!-- content -->
<div class="container">
    <div class="page-header">
        <h1>New bet</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Event</th>
                    <th class="text-center">Bet</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><%= bet.name %></td>
                    <% if (userbetguess == "1") { %>
                        <td class="text-center">1: <%= bet.home %> odds</td>
                    <% } else if (userbetguess == "X") { %>
                        <td class="text-center">X: <%= bet.draw %> odds</td>
                    <% } else if (userbetguess == "2") { %>
                        <td class="text-center">2: <%= bet.away %> odds</td>
                    <% } %>
                </tr>
               </tbody>
           </table>
       </div>
   </div>

    <form method="post">
        <p>
           <input type="submit" class="btn btn-primary" value="Bet"/>
           <a href="/bets" class="btn btn-default">Cancel</a>
       </p>
    </form>

</div>

<%- include('footer') %>