<%- include('header') %>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/bets">Sports</a></li>
                <li><a href="/admin">Admin</a></li>
                <li class="active"><a href="/profile">Profile</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/logout">Logout</a></li>
                <li><a href="/register">Register</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- content -->
<div class="container">
    <div class="page-header">
        <h1>My bets</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th class="text-center">Bet</th>
                        <th class="text-center">Options</th>
                    </tr>
                </thead>
                <tbody>
                    <% userbet.forEach(function(item){ %>
                    <tr>
                        <td><%= item.name %></td>
                        <td class="text-center"><%= item.guess %></td>
                        <td class="text-center"><a href="/userbet/<%= item.id %>/delete" class="btn btn-danger btn-xs">Delete</a></td>
                    </tr>
                </tbody>
                <% }); %>
            </table>
        </div>
    </div>

    <div class="page-header">
        <h2>Bank</h2>
    </div>

    <p>
        <b>Total: <%= user.bank %> HUF</b>
    </p>

    <p>
        <a href="/bank/5000" class="btn btn-default">+ 5000 HUF</a>
        <a href="/bank/10000" class="btn btn-default">+ 10.000 HUF</a>
        <a href="/bank/20000" class="btn btn-default">+ 20.000 HUF</a>
    </p>


</div>


<%- include('footer') %>