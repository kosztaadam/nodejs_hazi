<!-- content -->
<div class="container">
    <div class="page-header">
        <h1>Sports Betting</h1>
    </div>

    <div class="row">
        <div class="col-sd-6">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Event</th>
                    <th class="text-center">1</th>
                    <th class="text-center">X</th>
                    <th class="text-center">2</th>
                </tr>
                </thead>
                <tbody>
                <% bet.forEach(function(item){ %>
                <tr>
                    <td><%= item.name %></td>
                    <td class="text-center"><a href="/userbet/new/<%= item.id %>/1"><%= item.home %></a></td>
                    <td class="text-center"><a href="/userbet/new/<%= item.id %>/X"><%= item.draw %></a></td>
                    <td class="text-center"><a href="/userbet/new/<%= item.id %>/2"><%= item.away %></a></td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('footer') %>