<%- include('header') %>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="">Sports</a></li>
                <li><a href="/admin">Admin</a></li>
                <li><a href="/profile">Profile</a></li>
