<!-- content -->
<div class="container">
    <div class="page-header">
        <h1>My bets</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <% bets.forEach(function(item){ %>
                <tr>
                    <td class="text-center"><input type="checkbox"/></td>
                    <td><%= item.name %></td>
                    <td class="text-center"><><%= item.guess %></td>
                </tr>
                <!-- Pelda egy item-re:
                <tr>
                    <td class="text-center"><input type="checkbox"/></td>
                    <td>Everton - Arsenal, Sat 19 Mar 13:45</td>
                    <td class="text-center">X</td>
                </tr>
                -->
                <% }); %>
            </table>
        </div>
    </div>

    <p>
        <a href="index.html" class="btn btn-default">Modify</a>
        <a href="index.html" class="btn btn-danger">Delete</a>
    </p>

    <div class="page-header">
        <h2>Bank</h2>
    </div>

    <p>
        <b>Total: <%= user.bank %> HUF</b>
    </p>

    <p>
        <a href="/profile/<%= user.id %>/5000" class="btn btn-default">+ 5000 HUF</a>
        <a href="/profile/<%= user.id %>/10000" class="btn btn-default">+ 10.000 HUF</a>
        <a href="/profile/<%= user.id %>/20000" class="btn btn-default">+ 20.000 HUF</a>
    </p>


</div>


<%- include('footer') %>